<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent" tools:layout_editor_absoluteY="177dp"
        tools:layout_editor_absoluteX="206dp"
        >

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="377dp"
            android:gravity="right"
            android:textColor="@color/purple_200"
            android:textSize="24sp" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:stretchColumns="*" android:shrinkColumns="*">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <Button
                    android:text="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/b1" android:onClick="ajouterNbr"/>
                <Button
                    android:text="2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/b2" android:onClick="ajouterNbr"/>
                <Button
                    android:text="3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/b3" android:onClick="ajouterNbr"/>
                <Button
                    android:text="+"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/bPlus" android:onClick="setOperator"/>
            </TableRow>
            <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
                <Button
                    android:text="4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/b4" android:onClick="ajouterNbr"/>
                <Button
                    android:text="5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/b5" android:onClick="ajouterNbr"/>
                <Button
                    android:text="6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/b6" android:onClick="ajouterNbr"/>
                <Button
                    android:text="-"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/bMinus" android:onClick="setOperator"/>
            </TableRow>
            <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
                <Button
                    android:text="7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/b7" android:onClick="ajouterNbr"/>
                <Button
                    android:text="8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/b8" android:onClick="ajouterNbr"/>
                <Button
                    android:text="9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/b9" android:onClick="ajouterNbr"/>
                <Button
                    android:text="*"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/bMul" android:onClick="setOperator"/>
            </TableRow>
            <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
                <Button
                    android:text="0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/b0"
                    android:layout_span="2"
                    android:onClick="ajouterNbr"/>
                <Button
                    android:text="."
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/bV" android:onClick="setVirgule"/>
                <Button
                    android:text="/"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/bDiv" android:onClick="setOperator"/>
            </TableRow>
            <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
                <Button
                    android:text="AC"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/bAC"
                    android:layout_span="2"
                    android:onClick="clean"/>
                <Button
                    android:text="="
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/bResult"
                    android:layout_span="2"
                    android:onClick="calculer"/>
            </TableRow>
        </TableLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>